{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true
  },
  "include": ["resources/**/*.ts", "resources/**/*.tsx"],
  "exclude": ["node_modules", "vendor", "comercio-plus-frontend", "comercio-plus-frontend-react", "playwright-report", "test-results"]
}
