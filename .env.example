APP_NAME=ComercioPlus
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost

# Produccion (frontend en Vercel):
# Recomendado para API con Bearer token (sin cookies): habilitar CORS global.
CORS_ALLOW_ALL=true
# Si desactivas CORS_ALLOW_ALL, configura orígenes específicos:
# Puedes listar uno o varios orÃ­genes separados por coma.
# Soporta comodines, por ejemplo: https://comercio-plus-oficial-*.vercel.app
# CORS_ALLOWED_ORIGINS=https://comercio-plus-oficial.vercel.app,https://comercio-plus-oficial-*.vercel.app
# Opcional para un dominio custom adicional:
# FRONTEND_URL=https://tu-dominio.com
CORS_ALLOWED_ORIGINS=
CORS_ALLOWED_ORIGIN_PATTERNS=
FRONTEND_URL=
VERCEL_PROD_ORIGIN=

LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# Para usar con SQLite (recomendado para desarrollo local rápido)
DB_CONNECTION=sqlite
DB_DATABASE=
# La ruta a DB_DATABASE será configurada automáticamente por el script de setup
# o debe ser la ruta absoluta a tu archivo database/database.sqlite.

# Ejemplo para MySQL (comentar líneas de SQLite si se usa)
# DB_HOST=127.0.0.1
# DB_PORT=3306
# DB_DATABASE=comercioplus
# DB_USERNAME=root
# DB_PASSWORD=
#
# Railway (MySQL) suele proveer estas variables automáticamente:
# MYSQLHOST, MYSQLPORT, MYSQLDATABASE, MYSQLUSER, MYSQLPASSWORD, MYSQL_URL
# El proyecto ahora las usa como fallback cuando DB_* no está definido.

BROADCAST_DRIVER=log
CACHE_DRIVER=file
FILESYSTEM_DISK=local
QUEUE_CONNECTION=sync
SESSION_DRIVER=file
SESSION_LIFETIME=120

MEMCACHED_HOST=127.0.0.1

REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

MAIL_MAILER=log
MAIL_HOST=mailpit
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# Cloudinary media CDN (opcional en local, requerido en producción)
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=
CLOUDINARY_URL=cloudinary://API_KEY:API_SECRET@CLOUD_NAME

PUSHER_APP_ID=
PUSHER_APP_KEY=
PUSHER_APP_SECRET=
PUSHER_HOST=
PUSHER_PORT=443
PUSHER_SCHEME=httpss
PUSHER_APP_CLUSTER=mt1

VITE_APP_NAME="${APP_NAME}"
VITE_PUSHER_APP_KEY="${PUSHER_APP_KEY}"
VITE_PUSHER_HOST="${PUSHER_HOST}"
VITE_PUSHER_PORT="${PUSHER_PORT}"
VITE_PUSHER_SCHEME="${PUSHER_SCHEME}"
VITE_PUSHER_APP_CLUSTER="${PUSHER_APP_CLUSTER}"
# Fuerza llamadas same-origin (Vercel -> rewrite /api proxy).
VITE_USE_SAME_ORIGIN_API=true
